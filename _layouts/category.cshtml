---
layout : layout
---

@inherits RazorEngine.Templating.TemplateBase<Pretzel.Logic.Templating.Context.PageContext>

@{
    object catName = Model.Page.Bag["category"];
}

<article id="@Model.Page.Id" class="contain post type-post status-publish format-standard hentry">
    <div class="title">
        <h2 class="entry-title"><a href="@Model.Page.Url" rel="bookmark">Category: @catName</a></h2>
    </div>

    <div class="entry-content">
        <ul>
            @{
                foreach( var cat in @Model.Site.Categories )
                {
                    if( cat.Name.Equals( catName ) )
                    {
                        foreach( var post in cat.Posts )
                        {
                            @:
                            <li><a href="@post.Url">@post.Title</a></li>
                        }
                    }
                }
            }
        </ul>
    </div>
</article>
